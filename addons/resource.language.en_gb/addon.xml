<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="resource.language.en_gb"
  version="2.0.1"
  name="English"
  provider-name="Team Kodi">
  <requires>
    <import addon="kodi.resource" version="1.0.0"/>
  </requires>
  <extension
    point="kodi.resource.language"
    locale="en_GB">
    <charsets>
      <gui>CP1252</gui>
      <subtitle>CP1252</subtitle>
    </charsets>
    <sorttokens>
      <token>The</token>
    </sorttokens>
  </extension>
  <extension point="kodi.addon.metadata">
    <summary lang="en">English language pack</summary>
	<summary lang="es">Paquete de idioma Ingles</summary>
    <description lang="en">English version of all texts used in Kodi.</description>
	<description lang="es">Versión en Ingles de todos los textos utilizados en Kodi.</description>
    <disclaimer lang="en">English is the default language for Kodi, removing it may cause issues</disclaimer>
	<disclaimer lang="es">El inglés es el idioma predeterminado para Kodi, eliminarlo puede causar problemas</disclaimer>
    <platform>all</platform>
  </extension>
</addon>
